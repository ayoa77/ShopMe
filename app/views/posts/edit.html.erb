<h1>Edit Post</h1>


<% if @post.errors.any? %>
<div class = "user_errors">
  <h2>Uh Oh...</h2>
  <ul>
    <% @post.errors.full_messages.each do |message|%>
    <li><%=message%></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @post do |f| %>
<%=f.label :description%>
<%=f.text_area :description%> </br>
<%=f.label :post_photo%>
<%=f.file_field :post_photo%> </br>
<%=f.label :price%>
<%=f.number_field :price%> </br>
<% end %>
